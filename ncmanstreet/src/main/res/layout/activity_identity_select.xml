<?xml version="1.0" encoding="utf-8"?>
<com.rcs.nchumanity.view.PercentLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <com.rcs.nchumanity.view.PercentLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="10dp"
        app:layout_widthPercent="90%">


        <com.rcs.nchumanity.view.PercentLinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_widthPercent="50%">


            <androidx.percentlayout.widget.PercentFrameLayout
                android:id="@+id/identity_1"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/circle_select"
                app:layout_aspectRatio="100%"
                app:layout_widthPercent="30%">

                <ImageButton
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:background="@drawable/circle_fff"
                    android:src="@drawable/ic_jiuhuche"
                    app:layout_aspectRatio="100%"
                    app:layout_widthPercent="95%" />


            </androidx.percentlayout.widget.PercentFrameLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:gravity="center_horizontal"
                android:text="@string/wscxry"
                android:textColor="@color/black" />


        </com.rcs.nchumanity.view.PercentLinearLayout>

        <com.rcs.nchumanity.view.PercentLinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_widthPercent="50%">


            <androidx.percentlayout.widget.PercentFrameLayout
                android:id="@+id/identity_2"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/circle_select"
                app:layout_aspectRatio="100%"
                app:layout_widthPercent="30%">

                <ImageButton
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:background="@drawable/circle_fff"
                    android:src="@drawable/ic_jiuhuche"
                    app:layout_aspectRatio="100%"
                    app:layout_widthPercent="95%" />


            </androidx.percentlayout.widget.PercentFrameLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:gravity="center_horizontal"
                android:text="@string/wsfxry"
                android:textColor="@color/black" />


        </com.rcs.nchumanity.view.PercentLinearLayout>


    </com.rcs.nchumanity.view.PercentLinearLayout>


</com.rcs.nchumanity.view.PercentLinearLayout>