<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.rcs.nchumanity.view.CommandBar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></com.rcs.nchumanity.view.CommandBar>


    <View
        android:layout_width="match_parent"
        android:layout_height="6dp"
        android:background="@drawable/ic_22"></View>

    <TextView
        android:id="@+id/changePosition"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/smssdk_white"
        android:drawableRight="@drawable/ic_down"
        android:gravity="center_vertical"
        android:padding="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:text="南昌" />


    <ListView
        android:id="@+id/classList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></ListView>





</LinearLayout>