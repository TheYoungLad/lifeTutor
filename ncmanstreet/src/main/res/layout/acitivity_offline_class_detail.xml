<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:toolbar="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <com.rcs.nchumanity.view.CommandBar
        android:id="@+id/toolbar"
        toolbar:title="线下课程"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></com.rcs.nchumanity.view.CommandBar>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/detailImg"
                android:scaleType="centerCrop"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp">


                <ImageView
                    android:id="@+id/logo3"
                    android:layout_width="3dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_17" />

                <TextView
                    android:id="@+id/title3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/logo3"
                    android:text="讲师介绍"
                    android:textColor="#ff252525"
                    android:textSize="15sp" />

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_below="@id/title3"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="10dp"
                    android:scaleType="centerInside"
                    android:id="@+id/logo_"
                    android:src="@drawable/ic_logo" />

                <TextView
                    android:id="@+id/pxzx"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="南昌市红十字现场救护培训中心"
                    android:textColor="#ff252525"
                    android:layout_marginLeft="20dp"
                    android:layout_toRightOf="@id/logo_"
                    android:layout_alignTop="@+id/logo_"
                    android:layout_marginTop="10dp"
                    android:textSize="15sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="李雪红"
                    android:id="@+id/trainer"
                    android:layout_marginTop="15dp"
                    android:layout_below="@+id/pxzx"
                    android:layout_alignLeft="@id/pxzx"
                    android:textColor="#ffda251d"
                    android:textSize="12sp" />

            </RelativeLayout>


        </LinearLayout>

    </ScrollView>

    <Button
        android:id="@+id/submitSignUp"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/button"
        android:text="报名"
        android:textColor="@color/smssdk_white" />


</LinearLayout>