<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="6dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="13dp">

            <TextView
                android:id="@+id/timeTag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="培训时间:"
                android:textColor="#ff333333"
                android:textSize="13sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="13dp"
                android:layout_toRightOf="@+id/timeTag"
                 android:id="@+id/dateTime"
                />

            <TextView
                android:id="@+id/address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/timeTag"
                android:layout_alignLeft="@id/timeTag"
                android:layout_marginTop="5dp"
                android:text="培训地址:"
                android:textColor="#ff333333"
                android:textSize="13sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/address"
                android:layout_marginLeft="13dp"
                android:layout_toRightOf="@+id/timeTag"
                android:textColor="#ff333333"
                android:id="@+id/trainPosition"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/address"
                android:layout_marginTop="5dp"
                android:text="已报人数:"
                android:textColor="#ff333333"
                android:textSize="13sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/count"
                android:layout_marginLeft="13dp"
                android:layout_toRightOf="@+id/count"
                android:id="@+id/currentCount"
                android:textColor="#ff333333"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/trainCom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/count"
                android:layout_marginTop="5dp"
                android:text="培训机构:"
                android:textColor="#ff333333"
                android:textSize="13sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/trainCom"
                android:layout_marginLeft="13dp"
                android:layout_toRightOf="@+id/trainCom"
                android:id="@+id/trainOrg"
                android:textColor="#ff333333"
                android:textSize="13sp" />


            <Button
                android:id="@+id/cancel"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:layout_alignTop="@id/reSelect"
                android:layout_marginRight="5dp"
                android:layout_toLeftOf="@id/reSelect"
                android:background="@drawable/btn_cancel_bg"
                android:text="取消"
                android:textColor="#ffffffff"
                android:textSize="11sp" />

            <Button
                android:id="@+id/reSelect"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:layout_below="@id/trainCom"
                android:layout_alignParentRight="true"
                android:background="@drawable/btn_reselect_bg"
                android:text="重选"
                android:textColor="#ffffffff"
                android:textSize="11sp" />


        </RelativeLayout>
    </androidx.cardview.widget.CardView>


</LinearLayout>