<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">

        <set>
            <objectAnimator android:duration="200" android:propertyName="rotationX" android:valueTo="360"></objectAnimator>
        </set>

    </item>

    <item android:state_pressed="false">
        <set>
            <objectAnimator android:duration="200" android:propertyName="rotationX" android:valueTo="0"></objectAnimator>
        </set>
    </item>

</selector>