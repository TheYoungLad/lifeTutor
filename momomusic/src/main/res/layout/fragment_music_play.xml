                    android:layout_toRightOf="@+id/hq1"
                    android:text="@string/beatrich" />

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="20dp"
                    android:background="?android:attr/selectableItemBackground"
                    android:src="@drawable/ic_yuandiancaidan" />

            </RelativeLayout>

            <View
                style="@style/line"
                android:layout_width="match_parent"></View>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/button_ripple_no_corner"
                android:clickable="true">

                <ImageView
                    android:id="@+id/music3"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="20dp"
                    android:src="@drawable/gedan6" />

                <TextView
                    android:id="@+id/music3tit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/music3"
                    android:layout_marginTop="5dp"
                    android:layout_toRightOf="@+id/music3"
                    android:text="@string/supperstar" />

                <TextView
                    android:id="@+id/hq2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
