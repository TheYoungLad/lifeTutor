                android:layout_height="wrap_content"
                android:background="@android:color/white">

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="?android:attr/selectableItemBackground"
                    android:gravity="left|center_vertical"
                    android:paddingLeft="10dp"
                    android:text="@string/xianguanshipin"
                    android:textColor="@android:color/black"
                    android:textStyle="bold" />
            </LinearLayout>

            <androidx.percentlayout.widget.PercentRelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/button_ripple_no_corner"
                android:clickable="true"
                android:paddingLeft="10dp"
                android:paddingBottom="10dp">


                <androidx.cardview.widget.CardView
                    android:id="@+id/album"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:cardCornerRadius="5dp"
                    app:layout_aspectRatio="160%"
                    app:layout_widthPercent="33%">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/gedan5" />
                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="10dp"
                    android:layout_toRightOf="@id/album"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:text="@string/duanmeixiaoge" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@id/title"
                    android:layout_alignBottom="@id/album"
                    android:layout_marginBottom="5dp"
                    android:maxLines="1"
                    android:text="@string/yongyinyue" />


            </androidx.percentlayout.widget.PercentRelativeLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/splitLine_little"></View>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:background="@android:color/white">

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:background="?android:attr/selectableItemBackground"
                    android:gravity="left|center_vertical"
                    android:text="@string/xihuanzheshouge"
                    android:textColor="@android:color/black"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|center_vertical"
                    android:layout_marginRight="10dp"
                    android:drawableRight="@drawable/ic_downstep"
                    android:text="@string/gengduo" />
            </FrameLayout>

            <View
                style="@style/line"
                android:layout_width="match_parent"></View>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/button_ripple_no_corner"
                android:clickable="true">

                <ImageView
                    android:id="@+id/music1"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="20dp"
                    android:src="@drawable/gedan6" />

                <TextView
                    android:id="@+id/music1tit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/music1"
                    android:layout_marginTop="5dp"
                    android:layout_toRightOf="@+id/music1"
                    android:text="@string/supperstar" />

                <TextView
                    android:id="@+id/hq"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/music1tit"
                    android:layout_alignLeft="@+id/music1tit"
                    android:layout_marginTop="2dp"
                    android:layout_marginRight="2dp"
                    android:text="@string/hq" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/music1tit"
                    android:layout_marginTop="2dp"
                    android:layout_toRightOf="@+id/hq"
                    android:text="@string/beatrich" />

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="20dp"
                    android:background="?android:attr/selectableItemBackground"
                    android:src="@drawable/ic_yuandiancaidan" />

            </RelativeLayout>

            <View
                style="@style/line"
                android:layout_width="match_parent"></View>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/button_ripple_no_corner"
                android:clickable="true">

                <ImageView
                    android:id="@+id/music2"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="20dp"
                    android:src="@drawable/gedan6" />

                <TextView
                    android:id="@+id/music2tit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/music2"
                    android:layout_marginTop="5dp"
                    android:layout_toRightOf="@+id/music2"
                    android:text="@string/supperstar" />

                <TextView
                    android:id="@+id/hq1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/music2tit"
                    android:layout_alignLeft="@+id/music2tit"
                    android:layout_marginTop="2dp"
