                    android:layout_toRightOf="@+id/hq2"
                    android:text="@string/beatrich" />

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="20dp"
                    android:background="?android:attr/selectableItemBackground"
                    android:src="@drawable/ic_yuandiancaidan" />

            </RelativeLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/splitLine_little"></View>


            <!--<include layout="@layout/fragment_tuijian_tuijiangedan"></include>-->
