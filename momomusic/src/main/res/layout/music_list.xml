            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@id/albumPhoto2"
            android:text="@string/danqu" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/tag2"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/tag2"
            android:text="@string/zhangxin" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/author2"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_below="@id/tag2"
            android:layout_alignLeft="@id/tag2"
            android:layout_marginTop="10dp"
            android:src="@drawable/gedan2" />

        <TextView
            android:id="@+id/authorName2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/author2"
