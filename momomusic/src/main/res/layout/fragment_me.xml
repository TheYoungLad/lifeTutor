<?xml version="1.0" encoding="utf-8"?>
<com.example.momomusic.view.PercentLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">

        <ImageButton
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:background="?android:attr/selectableItemBackground"
            android:src="@drawable/ic_caidan1"
            android:tint="@color/gray_dark" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:text="@string/wodeyinyue"
            android:textColor="@android:color/black"
            android:textSize="16sp" />

        <ImageButton
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:background="?android:attr/selectableItemBackground"
            android:foregroundTint="@android:color/black"
            android:src="@drawable/ic_sousuo" />
    </RelativeLayout>


    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:paddingLeft="10dp"
                android:paddingBottom="10dp">

                <ImageView
                    android:id="@+id/picture"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/ic_weidenglu_touxiang"
                    android:tint="@android:color/darker_gray" />

                <TextView
                    android:id="@+id/userName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/picture"
                    android:layout_marginTop="5dp"
                    android:layout_toRightOf="@id/picture"
                    android:text="@string/heibaixiangpian" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/userName"
                    android:layout_alignLeft="@id/userName"
                    android:text="@string/pingzhiyinyue"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/qiandao"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/userName"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20dp"
                    android:text="@string/qiandao" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/userName"
                    android:layout_alignRight="@id/qiandao"
                    android:text="@string/qiandaovip"
                    android:textSize="11sp" />
            </RelativeLayout>


            <View
                style="@style/line"
                android:layout_width="match_parent"></View>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/localMusic"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@+id/suiJiBoFang"
                    android:background="?android:attr/selectableItemBackground"
                    android:drawableLeft="@drawable/ic_bendi"
                    android:drawablePadding="10dp"
                    android:gravity="start|center_vertical"
                    android:paddingLeft="20dp"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:text="@string/bendiyinyue"
                    android:textColor="@color/lightMainTextColor" />

                <TextView
                    android:id="@+id/suiJiBoFang"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:drawableLeft="@drawable/ic_bofang1"
                    android:drawablePadding="15dp"
                    android:drawableTint="@android:color/holo_red_light"
                    android:gravity="center"
                    android:paddingRight="10dp"
                    android:text="@string/suijibofang"
                    android:textColor="@android:color/holo_red_light" />

            </RelativeLayout>

            <View
                style="@style/line"
                android:layout_width="match_parent"
                android:layout_marginLeft="60dp"></View>


            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/zuiJinBoFang"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="?android:attr/selectableItemBackground"
                    android:drawableLeft="@drawable/ic_zuijinyuedu"
                    android:drawableRight="@drawable/ic_downstep"
                    android:drawablePadding="10dp"
                    android:gravity="start|center_vertical"
                    android:paddingLeft="20dp"
                    android:paddingTop="8dp"
                    android:paddingRight="10dp"
                    android:paddingBottom="8dp"
                    android:text="@string/zuijinbofang"
                    android:textColor="@color/lightMainTextColor" />


            </FrameLayout>

            <View
                style="@style/line"
                android:layout_width="match_parent"
                android:layout_marginLeft="60dp"></View>


            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="?android:attr/selectableItemBackground"
                    android:drawableLeft="@drawable/ic_diantaizhibo"
                    android:drawableRight="@drawable/ic_downstep"
                    android:drawablePadding="10dp"
                    android:gravity="start|center_vertical"
                    android:paddingLeft="20dp"
                    android:paddingTop="8dp"
                    android:paddingRight="10dp"
                    android:paddingBottom="8dp"
                    android:text="@string/shoutindiantai"
                    android:textColor="@color/lightMainTextColor" />

            </FrameLayout>

            <View
                style="@style/line"
                android:layout_width="match_parent"
                android:layout_marginLeft="60dp"></View>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="?android:attr/selectableItemBackground"
                    android:drawableLeft="@drawable/ic_aixin"
                    android:drawableRight="@drawable/ic_downstep"
                    android:drawablePadding="10dp"
                    android:gravity="start|center_vertical"
                    android:paddingLeft="20dp"
                    android:paddingTop="8dp"
                    android:paddingRight="10dp"
                    android:paddingBottom="8dp"
                    android:text="@string/shoucangjia"
                    android:textColor="@color/lightMainTextColor" />

            </FrameLayout>

            <View
                style="@style/line"
                android:layout_width="match_parent"
                android:layout_marginLeft="60dp"></View>


            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="?android:attr/selectableItemBackground"
                    android:drawableLeft="@drawable/ic_xiazai1"
                    android:drawableRight="@drawable/ic_downstep"
                    android:drawablePadding="10dp"
                    android:gravity="start|center_vertical"
                    android:paddingLeft="20dp"
                    android:paddingTop="8dp"
                    android:paddingRight="10dp"
                    android:paddingBottom="8dp"
                    android:text="@string/xiazaiguanli"
                    android:textColor="@color/lightMainTextColor" />

            </FrameLayout>

            <View
                style="@style/line"
                android:layout_width="match_parent"></View>


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:paddingLeft="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/changjiangedan"
                    android:textColor="@android:color/black"
                    android:textSize="16sp" />

                <Button
                    android:layout_width="35dp"
                    android:layout_height="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/ripping_btn"
                    android:paddingLeft="4dp"
                    android:paddingTop="2dp"
                    android:paddingRight="4dp"
                    android:paddingBottom="2dp"
                    android:text="@string/chuangjian"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="12sp" />
            </RelativeLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/xihuan"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        app:cardCornerRadius="5dp"
                        app:layout_constraintLeft_toLeftOf="parent">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/gray_dark"
                            android:padding="5dp"
                            android:src="@drawable/ic_aixin"
                            android:tint="@android:color/white" />

                    </androidx.cardview.widget.CardView>


                    <TextView
                        android:id="@+id/xihuanTag"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="@string/xihuanyinyue"
                        app:layout_constraintLeft_toRightOf="@id/xihuan" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingBottom="5dp"
                        android:text="共0首歌"
                        app:layout_constraintBottom_toBottomOf="@id/xihuan"
                        app:layout_constraintLeft_toLeftOf="@id/xihuanTag" />


                </androidx.constraintlayout.widget.ConstraintLayout>


            </LinearLayout>


            <!--
            下面是推荐的歌曲
            -->
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:paddingLeft="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/tuijiangedan"
                    android:textColor="@android:color/black"
                    android:textSize="16sp" />

                <Button
                    android:layout_width="35dp"
                    android:layout_height="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/ripping_btn"
                    android:paddingLeft="4dp"
                    android:paddingTop="2dp"
                    android:paddingRight="4dp"
                    android:paddingBottom="2dp"
                    android:text="@string/gengduo"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="12sp" />
            </RelativeLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/suiyue"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        app:cardCornerRadius="5dp"
                        app:layout_constraintLeft_toLeftOf="parent">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/gray_dark"
                            android:src="@drawable/ic_aixin"
                            android:tint="@android:color/white" />

                    </androidx.cardview.widget.CardView>


                    <TextView
                        android:id="@+id/suiyueName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="@string/suiyue"
                        app:layout_constraintLeft_toRightOf="@id/suiyue" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingBottom="5dp"
                        android:text="共0首歌"
                        app:layout_constraintBottom_toBottomOf="@id/suiyue"
                        app:layout_constraintLeft_toLeftOf="@id/suiyueName" />


                </androidx.constraintlayout.widget.ConstraintLayout>


            </LinearLayout>


        </LinearLayout>

    </androidx.core.widget.NestedScrollView>


</com.example.momomusic.view.PercentLinearLayout>