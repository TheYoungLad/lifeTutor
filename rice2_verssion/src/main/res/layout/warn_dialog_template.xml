<?xml version="1.0" encoding="utf-8"?>
<com.xiaofangfang.rice2_verssion.view.PercentLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/all_radius_white_bg"
    android:orientation="vertical">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:id="@+id/title"
        android:text="退出登录"
        android:textColor="#111"
        android:textSize="18sp" />


    <TextView
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:gravity="center"
        android:lineSpacingExtra="5dp"
        android:lines="2"
        android:maxLines="2"
        android:text="@string/outlinetip"
        android:textColor="#212121" />


    <View
        android:id="@+id/split"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@id/content"
        android:layout_marginTop="5dp"
        android:background="@color/splitLine"></View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/cancel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_below="@id/split"
            android:layout_weight="1"
            android:gravity="center"
            android:text="取消"
            android:textColor="@color/themecolor" />

        <View
            android:layout_width="1px"
            android:layout_height="35dp"
            android:background="@color/splitLine"></View>


        <TextView
            android:id="@+id/yes"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_below="@id/split"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="10dp"
            android:text="继续"
            android:textColor="@color/themecolor" />


    </LinearLayout>


</com.xiaofangfang.rice2_verssion.view.PercentLinearLayout>