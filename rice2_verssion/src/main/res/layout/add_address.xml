<?xml version="1.0" encoding="utf-8"?>
<com.xiaofangfang.rice2_verssion.view.PercentLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">


    <com.xiaofangfang.rice2_verssion.view.CommandBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"></com.xiaofangfang.rice2_verssion.view.CommandBar>


    <com.xiaofangfang.rice2_verssion.view.PercentLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/name"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:background="@drawable/buttonselect"
            android:gravity="start|center_vertical"
            android:hint="姓名"
            android:maxLength="4"
            android:paddingLeft="10dp"
            android:tag="姓名"
            android:textColor="#7e7e7e"
            android:textSize="13sp" />

        <ImageButton
            android:id="@+id/openCallBook"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:background="@drawable/buttonselect"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:src="@drawable/ic_call_book" />

    </com.xiaofangfang.rice2_verssion.view.PercentLinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/splitLine"></View>

    <EditText
        android:id="@+id/tel"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="#fff"
        android:gravity="start|center_vertical"
        android:hint="手机号码"
        android:inputType="phone"
        android:maxLength="11"
        android:paddingLeft="10dp"
        android:tag="手机号码"
        android:textColor="#7e7e7e"
        android:textColorHint="#7e7e7e"
        android:textSize="13sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/splitLine"></View>

    <Button
        android:id="@+id/area"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginBottom="20dp"
        android:background="#fff"
        android:drawableRight="@drawable/ic_downstep"
        android:focusableInTouchMode="false"
        android:gravity="start|center_vertical"
        android:paddingLeft="10dp"
        android:tag="所在地区"
        android:text="所在地区"
        android:textColor="#7e7e7e"
        android:textSize="13sp" />


    <EditText
        android:id="@+id/detailAddress"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="#fff"
        android:gravity="start|center_vertical"
        android:hint="详细地址:如道路.门牌号.小区.楼栋号.单元室等"
        android:maxLength="40"
        android:paddingLeft="10dp"
        android:tag="详细地址:如道路.门牌号.小区.楼栋号.单元室等"
        android:textColor="#7e7e7e"
        android:textSize="13sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="#fff"></View>


    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/splitLine"></View>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:background="#fff"
            android:focusableInTouchMode="false"
            android:gravity="start|center_vertical"
            android:paddingLeft="10dp"
            android:text="设为默认地址"
            android:textColor="#111"
            android:textSize="13sp" />

        <Switch
            android:id="@+id/defAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:track="@drawable/blue_radius_bg" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/splitLine"></View>

    </RelativeLayout>


    <Button
        android:id="@+id/save"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_below="@id/addv_tip"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/gradient_orangle_bg_radius"
        android:text="保存"
        android:textColor="@android:color/white" />


</com.xiaofangfang.rice2_verssion.view.PercentLinearLayout>