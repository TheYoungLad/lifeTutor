<?xml version="1.0" encoding="utf-8"?>
<com.xiaofangfang.rice2_verssion.view.PercentLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.xiaofangfang.rice2_verssion.view.ConsumeToobar
        android:id="@+id/consumeBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></com.xiaofangfang.rice2_verssion.view.ConsumeToobar>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <com.xiaofangfang.rice2_verssion.view.BannerFlip
                android:id="@+id/banner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></com.xiaofangfang.rice2_verssion.view.BannerFlip>


            <com.xiaofangfang.rice2_verssion.view.PercentLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/border_radius"
                android:orientation="horizontal">

                <com.xiaofangfang.rice2_verssion.view.FullRoLLView
                    android:id="@+id/fullRoll"
                    android:layout_width="0dp"
                    android:layout_height="70dp"
                    app:layout_widthPercent="60%">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:paddingLeft="5dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:ellipsize="end"
                            android:gravity="center"
                            android:lines="1"
                            android:textColor="#111" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:ellipsize="end"
                            android:gravity="center"
                            android:lines="1"
                            android:textColor="#111" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:ellipsize="end"
                            android:gravity="center"
                            android:lines="1"
                            android:textColor="#111" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:ellipsize="end"
                            android:gravity="center"
                            android:lines="1"
                            android:textColor="#111" />

                    </LinearLayout>


                </com.xiaofangfang.rice2_verssion.view.FullRoLLView>

                <View
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:background="#ccc"
                    app:layout_marginLeftPercent="5%"></View>

                <Button
                    android:id="@+id/startRecord"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/border_button"
                    android:drawablePadding="-5dp"
                    android:drawableRight="@drawable/ic_click"
                    android:fontFamily="casual"
                    android:gravity="center_vertical"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:text="启动"
                    android:textColor="#fff"
                    app:layout_heightPercent="10%"
                    app:layout_marginLeftPercent="5%" />


            </com.xiaofangfang.rice2_verssion.view.PercentLinearLayout>

            <include layout="@layout/call_count_module"></include>

            <include layout="@layout/call_count_module_2"></include>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#fff"
                android:orientation="horizontal"
                android:paddingBottom="10dp"
                android:paddingTop="5dp"
                android:tag="@string/oprators">

                <TextView
                    android:id="@+id/oprator1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:drawablePadding="5dp"
                    android:drawableTop="@drawable/ic_oprator1"
                    android:gravity="center"
                    android:tag="中国电信"
                    android:text="中国电信"
                    android:textColor="#111" />

                <TextView
                    android:id="@+id/oprator2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:drawablePadding="5dp"
                    android:drawableTop="@drawable/ic_oprator2"
                    android:gravity="center"
                    android:tag="中国移动"
                    android:text="中国移动"
                    android:textColor="#111" />

                <TextView
                    android:id="@+id/oprator3"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:drawablePadding="5dp"
                    android:drawableTop="@drawable/ic_oprator3"
                    android:gravity="center"
                    android:tag="中国联通"
                    android:text="中国联通"
                    android:textColor="#111" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:enabled="false"
                    android:gravity="center"
                    android:visibility="invisible" />
            </LinearLayout>

            <androidx.percentlayout.widget.PercentRelativeLayout
                android:layout_width="match_parent"
                android:layout_height="85dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/border_button">

                <TextView
                    android:id="@+id/mf_action"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="新套餐新活动"
                    android:textColor="#fff"
                    android:textSize="20sp"
                    app:layout_marginLeftPercent="5%"
                    app:layout_marginTopPercent="4%" />

                <TextView
                    android:id="@+id/mf_pro"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/mf_action"
                    android:layout_below="@+id/mf_action"
                    android:text="办理套餐"
                    android:textColor="#fff"
                    app:layout_marginTopPercent="2%" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/mf_pro"
                    android:layout_toRightOf="@id/mf_pro"
                    android:text="智能计算"
                    android:textColor="#fff"
                    app:layout_marginLeftPercent="7%" />


                <Button
                    android:id="@+id/action"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/two_radius"
                    android:text="更多套餐"
                    android:textColor="@color/themecolor"
                    app:layout_marginRightPercent="5%" />


            </androidx.percentlayout.widget.PercentRelativeLayout>


            <com.xiaofangfang.rice2_verssion.view.PercentLinearLayout
                android:id="@+id/cardContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="#fff"
                android:orientation="horizontal"
                android:paddingBottom="20dp"
                android:paddingTop="10dp">


            </com.xiaofangfang.rice2_verssion.view.PercentLinearLayout>


        </LinearLayout>

    </ScrollView>


</com.xiaofangfang.rice2_verssion.view.PercentLinearLayout>