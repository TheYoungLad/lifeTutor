<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:drawable="@android:color/transparent" android:state_pressed="false"></item>

    <item android:drawable="@color/selected" android:state_pressed="true">
        <shape android:dither="true" android:shape="rectangle">
            <solid android:color="@color/button_press"></solid>
            <corners android:radius="6dp"></corners>
            <padding android:bottom="5dp" android:left="5dp" android:right="5dp" android:top="5dp"></padding>
            <size android:width="80dp" android:height="30dp"></size>
        </shape>


    </item>


</selector>